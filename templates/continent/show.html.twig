{% extends 'base.html.twig' %}

{% block title %}Continent{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1>Supprimer un Continent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ continent.id }}</td>
            </tr>
            <tr>
                <th>Nom du continent</th>
                <td>{{ continent.nom }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">

<form method="post" action="{{ path('app_continent_delete', {'id': continent.id}) }}" onsubmit="return confirm('Vous êtes sûr le point de supprimer un continent, voulez-vous continuer ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ continent.id) }}">
    <a class="btn btn-primary me-md-2" href="{{ path('app_continent_index') }}" role="button">Retour</a>
    <button  class="btn btn-danger" role="button">Supprimer</button>
</form>
    
