{% extends 'base.html.twig' %}

{% block title %}Fabricant index{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 style="text-align:center">Gestion des Fabricants</h1>
<br>
 <a class="btn btn-primary" href="{{ path('app_fabricant_new') }}">Ajouter</a>
 <br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr>
                <th style="text-align:center">Id</th>
                <th style="text-align:center">Nom du Fabricant</th>
                <th style="text-align:center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {# La boucle est a modifier pour la pagination #}
        {% for fabricant in pagination.items %}
            <tr>
                <td class="table-light" style="text-align:center">{{ fabricant.id }}</td>
                <td class="table-light" style="text-align:center">{{ fabricant.nomFabricant }}</td>
                <td class="table-light" style="text-align:center">
                    {# <a href="{{ path('app_fabricant_show', {'id': fabricant.id}) }}">show</a> #}
                    <a class="btn btn-success" href="{{ path('app_fabricant_edit', {'id': fabricant.id}) }}">Modifier</a>
                    
                    <a class="btn btn-danger" href="{{ path('app_fabricant_show', {'id': fabricant.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# Sert a la pagination les boutons en dessous du tableau #}
     <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
</main>
</section>
</div>
<br>
   
{% endblock %}
