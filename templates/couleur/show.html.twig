{% extends 'base.html.twig' %}

{% block title %}Couleur{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1>Supprimer une Couleur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ couleur.id }}</td>
            </tr>
            <tr>
                <th>Nom la Couleur</th>
                <td>{{ couleur.nomCouleur }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">


    <form method="post" action="{{ path('app_couleur_delete', {'id': couleur.id}) }}" onsubmit="return confirm('Vous êtes sûr le point de supprimer une couleur, voulez-vous continuer ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.id) }}">
     <a class="btn btn-primary me-md-2" href="{{ path('app_couleur_index') }}">Retour</a>
    <button class="btn btn-danger">Supprimer</button>
    </form>   

