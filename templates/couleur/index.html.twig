{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 style="text-align:center">Gestion des Couleurs</h1>
<br>
<a class="btn btn-primary me-md-2" href="{{ path('app_couleur_new') }}">Ajouter</a>
<br>
<br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr>
                <th style="text-align:center">Id</th>
                <th style="text-align:center">Couleur de la bi√®re</th>
                <th style="text-align:center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr class="table-light">
                <td style="text-align:center">{{ couleur.id }}</td>
                <td style="text-align:center">{{ couleur.nomCouleur }}</td>
                <td style="text-align:center">
                    {# <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}">show</a> #}
                    <a class="btn btn-success" href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('app_couleur_show', {'id': couleur.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

</main>
</section>
</div>
<br>
{% endblock %}
