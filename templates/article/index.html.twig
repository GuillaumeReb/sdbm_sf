{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
{# {{ dump(articles) }} #}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 style="text-align:center">Gestion des Articles</h1>
<br>
     <a class="btn btn-primary me-md-2" href="{{ path('app_article_new') }}">Ajouter</a>
<br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr style="text-align:center">
                <th>Id</th>
                <th>Nom Article</th>
                <th>Type</th>
                <th>Marque</th>
                <th>Couleur</th>
                <th>Prix Achat</th>
                <th>Volume</th>
                <th>Titrage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {# debut des conneries #}
        {% for article in pagination.items %}
            <tr class="table-light", style="text-align:center">
                <td>{{ article.id }}</td>
                <td class="w-25">{{ article.nomArticle }}</td>
                <td>
                 {% if article.types is not null %}
                    {{ article.types.nomType}}
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                 <td>{{ article.marques.nomMarque}}</td>
                 <td>
                {% if article.couleurs is not null %}
                    {{ article.couleurs.nomCouleur}}
                    {% else %}
                        N/A
                    {% endif %}
                </td>               
                <td>{{ article.prixAchat }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.titrage }}</td>
               
                <td>
                    
                    <a class="btn btn-success btn-sm" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('app_article_show', {'id': article.id}) }}">Supprimer</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
      <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
</main>
</section>
</div>
<br>
   
{% endblock %}
