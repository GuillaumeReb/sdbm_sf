{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1>Supprimer un Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'Article</th>
                <td>{{ article.nomArticle }}</td>
            </tr>
            <tr>
                <th>Prix d'Achat</th>
                <td>{{ article.prixAchat }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ article.volume }}</td>
            </tr>
            <tr>
                <th>Titrage</th>
                <td>{{ article.titrage }}</td>
            </tr>
        </tbody>
    </table>
     <div class="d-grid gap-2 d-md-block">

     <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Vous êtes sûr le point de supprimer un article, voulez-vous continuer ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <a class="btn btn-primary me-md-2" href="{{ path('app_article_index') }}">Retour</a>
    <button class="btn btn-danger">Supprimer</button>
    </form>  

    {# <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a> #}

    {# {{ include('article/_delete_form.html.twig') }} #}

    </div>
</main>
</section>
</div>
<br>

{% endblock %}
